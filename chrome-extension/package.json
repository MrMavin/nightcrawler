{
  "name": "linkedin-job-extractor",
  "version": "1.0.0",
  "description": "Chrome extension to extract LinkedIn job descriptions",
  "scripts": {
    "build": "npm run build-css && webpack --mode=production",
    "build-css": "npx tailwindcss -i src/styles/main.css -o dist/styles.css --minify",
    "dev": "npm run build-css && webpack --mode=development --watch",
    "watch": "concurrently \"npx tailwindcss -i src/styles/main.css -o dist/styles.css --watch\" \"webpack --mode=development --watch\"",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
